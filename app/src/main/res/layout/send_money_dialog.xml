<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rectangle_shap">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="6dp">

            <com.example.kidbank.kidbanknew.Widget.MyEditText
                android:id="@+id/ed_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0000"
                android:hint="MESSAGE"
                android:inputType="textCapWords|textCapSentences"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"/>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="6dp">

            <com.example.kidbank.kidbanknew.Widget.MyEditText
                android:id="@+id/ed_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0000"
                android:hint="AMOUNT"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"/>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="6dp">

            <com.example.kidbank.kidbanknew.Widget.MyTextView
                android:id="@+id/tv_target_child"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="send it to the target child"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="5dp">

                <com.example.kidbank.kidbanknew.Widget.MyTextView
                    android:id="@+id/tv_send_money"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/background_login_btn"
                    android:gravity="center"
                    android:text="SEND"
                    android:textAllCaps="true"
                    android:textColor="@color/white_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="5dp">

                <com.example.kidbank.kidbanknew.Widget.MyTextView
                    android:id="@+id/tv_close"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/background_login_btn"
                    android:gravity="center"
                    android:text="CLOSE"
                    android:textAllCaps="true"
                    android:textColor="@color/white_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
