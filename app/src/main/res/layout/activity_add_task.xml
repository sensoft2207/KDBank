<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/my_appbar_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/addtask_round"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="3dp"
                    app:civ_circle_background_color="#0000"
                    app:civ_fill_color="@color/white_color" />

                <com.example.kidbank.kidbanknew.Widget.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Take a picture"
                    android:textAllCaps="true"
                    android:textColor="@color/white_color"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp">

                    <com.example.kidbank.kidbanknew.Widget.MyEditText
                        android:id="@+id/ed_task_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"
                        android:hint="ENTER TASK NAME"
                        android:inputType="textCapWords|textCapSentences"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"/>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp">

                    <com.example.kidbank.kidbanknew.Widget.MyEditText
                        android:id="@+id/ed_set_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"
                        android:hint="SET A VALUE"
                        android:inputType="number"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"/>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp">

                    <com.example.kidbank.kidbanknew.Widget.MyEditText
                        android:id="@+id/ed_deadline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0000"
                        android:hint="SET A DEADLINE"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"/>


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="6dp">

                    <com.example.kidbank.kidbanknew.Widget.MyTextView
                        android:id="@+id/tv_target_child"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="send it to the target child"
                        android:textAllCaps="true"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </android.support.v7.widget.CardView>

                <com.example.kidbank.kidbanknew.Widget.MyTextView
                    android:id="@+id/tv_submit_add_task"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/background_login_btn"
                    android:gravity="center"
                    android:text="SUBMIT"
                    android:textAllCaps="true"
                    android:textColor="@color/white_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</FrameLayout>
