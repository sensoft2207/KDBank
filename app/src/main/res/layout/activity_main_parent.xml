<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ln_home">

    <ImageView
        android:id="@+id/iv_main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/my_appbar"
            android:layout_width="wrap_content"
            android:layout_height="70dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_link"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="3dp"
                    app:civ_circle_background_color="#0000"
                    app:civ_fill_color="@color/white_color" />

                <com.example.kidbank.kidbanknew.Widget.MyTextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white_color" />

                <ImageView
                    android:id="@+id/iv_oppdrag"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"/>

                <ImageView
                    android:id="@+id/iv_penger"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"/>

                <ImageView
                    android:id="@+id/iv_contact"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>
